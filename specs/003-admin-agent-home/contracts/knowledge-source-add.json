{
  "openapi": "3.0.0",
  "info": {
    "title": "Knowledge Source Add API",
    "version": "1.0.0",
    "description": "Add URL to knowledge base for Pat AI agent"
  },
  "paths": {
    "/knowledge-source-add": {
      "post": {
        "summary": "Add knowledge source from URL",
        "description": "Fetches content from URL, generates embeddings, stores in vector database",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["url"],
                "properties": {
                  "url": {
                    "type": "string",
                    "format": "uri",
                    "description": "URL to fetch knowledge from",
                    "pattern": "^https?://",
                    "maxLength": 2048,
                    "example": "https://example.com/docs"
                  },
                  "sync_period": {
                    "type": "string",
                    "enum": ["24h", "7d", "1mo", "3mo"],
                    "default": "7d",
                    "description": "How often to re-sync this source"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Knowledge source added successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "required": ["id", "url", "title", "status", "chunk_count"],
                  "properties": {
                    "id": {
                      "type": "string",
                      "format": "uuid",
                      "description": "ID of created knowledge source"
                    },
                    "url": {
                      "type": "string",
                      "description": "Source URL"
                    },
                    "title": {
                      "type": "string",
                      "description": "Extracted page title"
                    },
                    "description": {
                      "type": "string",
                      "description": "Extracted meta description or first paragraph"
                    },
                    "status": {
                      "type": "string",
                      "enum": ["completed", "pending", "failed"],
                      "description": "Processing status"
                    },
                    "chunk_count": {
                      "type": "integer",
                      "description": "Number of chunks generated",
                      "example": 25
                    },
                    "sync_period": {
                      "type": "string",
                      "enum": ["24h", "7d", "1mo", "3mo"]
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Invalid URL or request",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string",
                      "examples": [
                        "Invalid URL format",
                        "URL must start with http:// or https://",
                        "Maximum 50 knowledge sources allowed"
                      ]
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized"
          },
          "422": {
            "description": "Unable to process URL",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string",
                      "examples": [
                        "Could not access that URL (404 Not Found)",
                        "Content requires authentication",
                        "Content too large (max 1MB)"
                      ]
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Server error"
          }
        },
        "security": [
          {
            "bearerAuth": []
          }
        ]
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}
